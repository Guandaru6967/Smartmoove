<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	 VerticalOptions="Center"
	 Size="400,300"
	 IsLightDismissEnabled="False"
	   xmlns:xct="clr-namespace:Xamarin.CommunityToolkit.UI.Views;assembly=Xamarin.CommunityToolkit"
	   xmlns:toolkit="http://xamarin.com/schemas/2020/toolkit"
             x:Class="Smartmoveapp.Views.Popups.DocumentAddPopup">
 <StackLayout>
  <Label Text="Would you like to scan a document from  your local folders  or take a photo?"
                VerticalOptions="CenterAndExpand" 
         HorizontalTextAlignment="Center"
         TextColor="{StaticResource themecolorf}"
         FontFamily="PoppinsBlack"
         Margin="10"
         FontSize="Medium"
        
                HorizontalOptions="CenterAndExpand" />
  <Grid ColumnDefinitions=".5*,.5*" Margin="10">
   <Button Grid.Column="0" Text="Local File" Clicked="LocalStorage" FontFamily="PoppinsBlack"  FontSize="12" TextColor="{StaticResource themecolorf}" BorderColor="{StaticResource themecolorf}" BackgroundColor="{StaticResource themecolora}"></Button>
   <Button Grid.Column="1" Text="Take a photo" Clicked="TakePhoto" FontFamily="PoppinsBlack" FontSize="12" BackgroundColor="{StaticResource themecolorf}" TextColor="{StaticResource themecolora}"></Button>
  </Grid>
 </StackLayout>

</xct:Popup>